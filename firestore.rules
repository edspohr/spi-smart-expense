rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users: 
    // - Read: Authenticated users (to find others for 'on behalf' logic if needed, or profile).
    // - Create: User can create own doc, but role defaults to professional/cannot be admin.
    // - Update: User can update own doc but CANNOT change role. Admin can update everything.
    match /users/{userId} {
      allow read: if request.auth != null;
      
      allow create: if request.auth != null && request.auth.uid == userId &&
        (!request.resource.data.keys().hasAny(['role']) || request.resource.data.role == 'professional');
        
      allow update: if request.auth != null && (
        (request.auth.uid == userId && (
           !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role'])
        )) || 
        isAdmin()
      );
    }
    
    // Projects: Read assigned/authenticated, Write Admin only
    match /projects/{projectId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Expenses: Create/Read own, Admin read/write all
    match /expenses/{expenseId} {
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if request.auth != null && (request.resource.data.userId == request.auth.uid || isAdmin());
      // Only Admin can update (approve/reject) or delete
      allow update, delete: if isAdmin();
    }

    // Allocations: Read own (or associated project?), Write Admin only
    match /allocations/{allocationId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Invoices: Admin only
    match /invoices/{invoiceId} {
      allow read, write: if isAdmin();
    }
  }
}
